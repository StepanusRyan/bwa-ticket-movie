        app:layout_constraintTop_toBottomOf="@+id/textView18" />

    <!-- Seat B -->

    <Button
        android:id="@+id/btnB1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="1"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@color/color_blue_gray"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnA1" />

    <Button
        android:id="@+id/btnB2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="2"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@color/color_blue_gray"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/btnB1"
        app:layout_constraintTop_toBottomOf="@+id/btnA2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnB2" />

    <Button
        android:id="@+id/btnB3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/color_blue_gray"
        android:text="3"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/btnB4"
        app:layout_constraintTop_toBottomOf="@+id/btnA3" />

    <Button
        android:id="@+id/btnB4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="4"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@color/color_blue_gray"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnA4" />

    <!-- Seat C -->

    <Button
        android:id="@+id/btnC1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="1"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@color/color_blue_gray"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnB1" />

    <Button
        android:id="@+id/btnC2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="2"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@color/color_blue_gray"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/btnC1"
        app:layout_constraintTop_toBottomOf="@+id/btnB2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btnC2" />

    <Button
        android:id="@+id/btnC3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="3"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@color/color_blue_gray"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@+id/btnC4"
        app:layout_constraintTop_toBottomOf="@+id/btnB3" />

    <Button
        android:id="@+id/btnC4"
        android:layout_width="50dp"
